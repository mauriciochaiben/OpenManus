# Development Environment Overrides for Docker Compose

# Vector Database Configuration
VECTOR_DB_HOST=chromadb
VECTOR_DB_PORT=8000
VECTOR_DB_URL=http://chromadb:8000

# ChromaDB Configuration
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_SERVER_HOST=0.0.0.0
CHROMA_SERVER_HTTP_PORT=8000
CHROMA_SERVER_CORS_ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://frontend:3000"]

# Development Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug

# External Access URLs
REACT_APP_API_URL=http://localhost:8000
REACT_APP_VECTOR_DB_URL=http://localhost:8001
REACT_APP_WS_URL=ws://localhost:8000

# Resource Limits
CHROMADB_MEMORY_LIMIT=512m
CHROMADB_CPU_LIMIT=0.5
